
/**
 * Module dependencies.
 */

var express = require('express')
  , routes = require('./routes')

var app = module.exports = express.createServer();

// Configuration

app.configure(function(){
    app.set('views', __dirname + '/views');
    app.set('view engine', 'ejs');
    app.use(express.bodyParser());
    app.use(express.methodOverride());
    app.use(express.cookieParser());
    app.use(express.session({ secret: 'cs391wp' }));
    app.use(app.router);
    app.use(express.static(__dirname + '/public'));
});

app.configure('development', function(){
  app.use(express.errorHandler({ dumpExceptions: true, showStack: true })); 
});

app.configure('production', function(){
  app.use(express.errorHandler()); 
});

// Bank Application Routes
app.get('/', routes.readme);
app.get('/create', routes.create);
app.get('/login', routes.login);
app.get('/index', routes.login);
app.get('/logout', routes.logout);
app.get('/transactions', routes.transactions);
app.get('/deposit', routes.deposit);
app.get('/withdraw', routes.withdraw);
app.get('/transfer', routes.transfer);
app.get('/report', routes.report);

//almost forgot to set this back to 3000
app.listen(8288);
console.log("Express server listening on port %d in %s mode", app.address().port, app.settings.env);
