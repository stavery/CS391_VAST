<!-- Create Account-->

<body>

<div id="head">
	<div id="top-bar">
	<div id="top-logo"><img id="logo"></img></div>
	</div>
</div>

<div id ="body">
	<div id="content">
		<div class="body-left">
			<h1>Create Account</h1>
			<form id="login" action method="post">

				<div class="split-left">
				<p><label for="username">Username</label></p>
				<p><input type="text" id="username" name="username" required="required"></p>
				
				<p><label for="password">Password</label></p>
				<p><input type="password" id="password" name="password" required="required"></p>
				
				<p><label for="school">School</label></p>
				<p><input type="text" id="school" name="school" required="required"></p>
				
				<p><label for="email">Email</label></p>
				<p><input type="email" id="email" name="email" required="required"></p>
				
				<p><input type="submit" id="create-button" value="Create" class="button" /></p>
				</div>
				
			</form>
			<%- msg %>
		</div>
		<div class="body-right">
			<h3>Navigation</h3>
			<p><a class="button" href="/home/"><span>Home</span></a></p>
		</div>
	</div>
</div>

<div id="foot"></div>
</body>